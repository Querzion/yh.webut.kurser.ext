<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             xmlns:viewmodels="clr-namespace:ShellNavigation.ViewModels"
             x:DataType="{x:Type viewmodels:ProductAddViewModel}"
             
             x:Class="ShellNavigation.Pages.ProductAddPage"
             Title="Add Product">
    <VerticalStackLayout>
        <Label 
            Text="Add New Product"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Product List" Command="{Binding NavigateToListCommand}" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>